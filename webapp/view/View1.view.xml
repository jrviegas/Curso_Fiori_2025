<mvc:View controllerName="zped.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="idPage" title="{i18n>title}">

        <Button id="idHelloWorldButton" text="Hello World" press="onHelloWorldButtonPress"/>

        <t:Table id="idPedidoTable" rows="{/PedidoSet}" threshold="10" class="sapUiTinyMargin">
            <t:extension>
                <OverflowToolbar id="idPedidosOverflowToolbar">
                    <Title id="idPedidosTitle" text="Pedidos"></Title>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column id="idPedidoColumn" width="4rem" sortProperty="Pedido">
                    <Label id="idPedidoLabel" text="Pedido"/>
                    <t:template>
                        <Text id="idPedidoText" text="{Pedido}" wrapping="false"/>                        
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>

    </Page>
</mvc:View>
