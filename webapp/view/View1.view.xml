<mvc:View controllerName="zped.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idPage" title="{i18n>title}">

        <!--<Button id="idHelloWorldButton" text="Hello World" icon="sap-icon://search" press="onHelloWorldButtonPress"/> -->

        <Table id="idPedidoTable"
            items="{/PedidoSet}"
            class="sapUiTinyMargin"
            mode="None"
            autoPopinMode="true"
            growing="true"
            growingScrollToLoad="true"
            itemPress="onPedidoItemPress">
            <columns>
                <Column id="idPedidoColumn" width="7rem" hAlign="Center">
                    <header>
                        <Label id="idPedidoLabel" text="Pedido"/>
                    </header>
                </Column>
                <Column id="idDataCriacaoColumn" width="7rem" hAlign="Center">
                    <header>
                        <Label id="idDataCriacaoLabel" text="Data Pedido"/>
                    </header>
                </Column>
                <Column id="idTipoPedidoColumn" width="7rem" hAlign="Center">
                    <header>
                        <Label id="idTipoPedidoLabel" text="Tipo Pedido"/>
                    </header>
                </Column>
                <Column id="idClienteColumn" width="47rem">
                    <header>
                        <Label id="idClienteLabel" text="Cliente"/>
                    </header>
                </Column>
                <Column id="idValorPedidoColumn" width="9rem" hAlign="End">
                    <header>
                        <Label id="idValorPedidoLabel" text="Valor Pedido"/>
                    </header>
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation">
                    <cells>
                        <Link id="idNumeroPedidoLink"
                            text="{NumeroPedido}"
                            press="onPedidoLinkPress"
                            wrapping="false"
                            tooltip="{NumeroPedido}"
                            templateShareable="false"/>
                        <Text id="idDataCriacaoText"
                            text="{path: 'DataCriacao', formatter: '.formatter.formatDate'}"
                            wrapping="false"/>
                        <Text id="idTipoPedidoText" text="{TipoPedido}" wrapping="false"/>
                        <Text id="idClienteText" text="{= ${Cliente} + ' - ' + ${Nome} }" wrapping="false"/>
                        <ObjectStatus id="idValorPedidoStatus"
                            text="{path: 'ValorPedido', formatter: '.formatter.formatCurrency'}"
                            state="{path: 'ValorPedido', formatter: '.formatter.determineValorPedidoState'}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

    </Page>
</mvc:View>
