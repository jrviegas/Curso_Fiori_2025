<mvc:View controllerName="zped.controller.PedidoDetalhe"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="idPedidoDetalhePage"
        title="{i18n>pedidoItensTitle}"
        showNavButton="true"
        navButtonPress="onNavBack">
        <content>
            <ObjectHeader id="idPedidoDetalheHeader"
                title="{= ${i18n>pedidoItensHeaderTitle} + ' ' + ${NumeroPedido}}"
                number="{path: 'ValorPedido', formatter: '.formatter.formatCurrency'}"
                numberUnit="{i18n>pedidoItensValorLabel}">
                <attributes>
                    <ObjectAttribute title="{i18n>pedidoTipoLabel}" text="{TipoPedido}"/>
                    <ObjectAttribute title="{i18n>pedidoClienteLabel}" text="{= ${Cliente} + ' - ' + ${Nome} }"/>
                </attributes>
            </ObjectHeader>
            <Table id="idPedidoItensTable"
                items="{path: 'toPedidoItem'}"
                mode="None"
                autoPopinMode="true"
                growing="true"
                growingScrollToLoad="true">
                <columns>
                    <Column width="6rem" hAlign="Center">
                        <header>
                            <Label text="{i18n>pedidoItensColumnNumero}"/>
                        </header>
                    </Column>
                    <Column width="10rem">
                        <header>
                            <Label text="{i18n>pedidoItensColumnMaterial}"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="{i18n>pedidoItensColumnDescricao}"/>
                        </header>
                    </Column>
                    <Column width="8rem" hAlign="End">
                        <header>
                            <Label text="{i18n>pedidoItensColumnQuantidade}"/>
                        </header>
                    </Column>
                    <Column width="8rem" hAlign="End">
                        <header>
                            <Label text="{i18n>pedidoItensColumnValor}"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{NumeroItemPedido}" wrapping="false"/>
                            <Text text="{Material}" wrapping="false"/>
                            <Text text="{Descricao}"/>
                            <Text text="{Quantidade}" textAlign="Right"/>
                            <Text text="{path: 'Valor', formatter: '.formatter.formatCurrency'}" textAlign="Right"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
